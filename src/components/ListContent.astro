---
import ListTitle from "@components/ListTitle.astro";

interface Props {
  className?: string;
  title: string;
  text: string;
}

const { className, title, text } = Astro.props;
---

<li class={className}>
  <ListTitle title={title} />
  <p class="ml-[5vw] leading-[4vh] text-[3vw]">
    {text}
  </p>
</li>
