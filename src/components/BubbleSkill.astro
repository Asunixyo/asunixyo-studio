---
interface Props {
  className: string;
  text: string;
  skillText: string;
}

const { className,text,skillText } = Astro.props;
---

<div
  class=`bg-[length:50%] bg-center bg-no-repeat flex justify-center items-center aspect-square bg-opacity-80 rounded-full shadow-md ${className}`
>
  <div class="flex flex-col text-center">
    <p class="w-[80%] text-[2vw] mx-auto">{text}</p>
    <p class="font-KumarOneRegular mt-[2vh] text-white">{skillText}</p>
  </div>
</div>
