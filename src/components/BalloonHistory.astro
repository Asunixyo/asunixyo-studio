---
interface Props {
  imgSrc: string;
  workplaceText: string;
  className: string;
  isLeft: boolean;
}

const { imgSrc, workplaceText, className, isLeft } = Astro.props;
let imgClass = "";
let textPos = "absolute top-clamp-4vh left-clamp-10vw";
if (!isLeft) {
  imgClass = "scale-x-[-1] origin-center";
  textPos = "absolute top-clamp-4vh left-clamp-15vw";
}
---

<div class=`${className}`>
  <div class="relative">
    <div class=`w-clamp-47vw ${imgClass}`>
      <img class="w-full" src={imgSrc} alt="" />
    </div>
    <div class=`${textPos}`>
      <p class="w-clamp-24vw mb-clamp-1vh text-center text-clamp-2.5vw text-[#FF8BA7]">
        {workplaceText}
      </p>
      <ul class="text-clamp-1vw w-clamp-20vw list-disc">
        <slot />
      </ul>
    </div>
  </div>
</div>
