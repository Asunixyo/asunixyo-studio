---
import ResponsivePicture from "@components/ResponsivePicture.astro";

interface Props {
  imgSrcNotExtension: string;
  workplaceText: string;
  Text: string;
  className: string;
  isLeft: boolean;
}

const {
  imgSrcNotExtension,
  workplaceText,
  Text,
  className,
  isLeft,
} = Astro.props;
let imgClass = "";
let textPos = "absolute top-clamp-3vh left-clamp-10vw";
if (!isLeft) {
  imgClass = "scale-x-[-1] origin-center";
  textPos = "absolute top-clamp-2vh left-clamp-15vw";
}
---

<div class=`${className}`>
  <div class="relative">
    <div class=`w-clamp-47vw ${imgClass}`>
      <ResponsivePicture
        className="w-full"
        src={imgSrcNotExtension}
        alt="バルーン"
      />
    </div>
    <div class=`${textPos}`>
      <p
        set:html={workplaceText}
        class="w-clamp-24vw mb-clamp-0.5vh text-center text-clamp-3vw text-[#FF8BA7]"
      />
      <p set:html={Text} class="line-clamp-3 text-clamp-2.5vw w-clamp-20vw" />
    </div>
  </div>
</div>
