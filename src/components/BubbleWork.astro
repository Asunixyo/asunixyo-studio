---
import ResponsivePicture from "@components/ResponsivePicture.astro";

interface Props {
  link: string;
  text: string;
  imgSrcNotExtension: string;
}

const { link, text, imgSrcNotExtension } = Astro.props;
---

<div class="flex flex-col items-center">
  <a
    href={link}
    class="relative aspect-square w-full bg-[#FFC6C7] rounded-full shadow-md"
  >
    <div
      class="absolute w-[65%] left-1/2 top-1/2 -translate-y-1/2 -translate-x-1/2 rounded-full overflow-hidden"
    >
      <ResponsivePicture
        className="w-full"
        src={imgSrcNotExtension}
        alt={text}
      />
    </div>
  </a>
  <p class="whitespace-nowrap mt-clamp-2vh text-clamp-3vw">{text}</p>
</div>
