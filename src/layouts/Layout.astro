---
import Footer from "@layouts/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja" class="bg-pink-50">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Asunixyo Studioへようこそ。フロントエンドエンジニアとして、ホームページやLP、ロゴ、チラシ制作を行っています。最新のプロジェクトや技術スキルを紹介しています。"
    />
    <meta name="viewport" content="width=430px" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/assets/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="https://asunixyo-studio.netlify.app/assets/favicon-16x16.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="24x24"
      href="https://asunixyo-studio.netlify.app/assets/favicon-24x24.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="https://asunixyo-studio.netlify.app/assets/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="48x48"
      href="https://asunixyo-studio.netlify.app/assets/favicon-48x48.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="64x64"
      href="https://asunixyo-studio.netlify.app/assets/favicon-64x64.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="128x128"
      href="https://asunixyo-studio.netlify.app/assets/favicon-128x128.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="256x256"
      href="https://asunixyo-studio.netlify.app/assets/favicon-256x256.png"
    />
    <link
      rel="icon"
      type="image/x-icon"
      href="https://asunixyo-studio.netlify.app/assets/favicon.ico"
    />
    <link rel="icon" type="image/png" href="/assets/favicon-64x64.png" />
    <link rel="manifest" href="/assets/site.webmanifest" />
    <link
      rel="mask-icon"
      href="/assets/safari-pinned-tab.svg"
      color="#ffc6c7"
    />
    <meta name="msapplication-TileColor" content="#ffc40d" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <meta property="og:title" content="Welcome to Asunixyo Studio." />
    <meta
      property="og:description"
      content="フロントエンドエンジニアとして、ホームページやLP、ロゴ、チラシ制作を行っています。"
    />
    <meta property="og:image" content="/assets/title@2x.png" />
    <meta property="og:url" content="https://asunixyo-studio.netlify.app/" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Welcome to Asunixyo Studio." />
    <meta
      name="twitter:description"
      content="フロントエンドエンジニアとして、ホームページやLP、ロゴ、チラシ制作を行っています。"
    />
    <meta name="twitter:image" content="/assets/title@2x.png" />
    <meta name="twitter:site" content="@asu__nixyo" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script src="https://para-com.jp/widget.js" data-hid="ee22a0af-441b-4efa-8a20-f0bc6fecc16c"></script>
  </head>
  <body>
    <div class="font-NotoSansJPRegular bg-[#FAEEE7] max-w-[430px] mx-auto shadow-xl">
      <slot />
      <Footer />
    </div>
  </body>
</html>
<style is:global>
  html {
    font-size: 16px;
    background: #fff;
  }
</style>
